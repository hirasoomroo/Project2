<div class="row">
  <div class="col-md-6">
    <h2>Login below!</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>New user sign up</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Full Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Email</span>
        </label>
        <label class="input-group input-group-vertical">
        
        <input type="text" id="email-signup" placeholder="info@site.com" class="input input-bordered" />
        </label>
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button id="signup" class="btn btn-primary" type="submit">Register here!</button>
      </div>
    </form>
  </div>
</div>

<script src="../css/js/login.js"></script>